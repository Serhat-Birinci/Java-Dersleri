package classes;

public class Main {

	public static void main(String[] args) {
		// clasların en temel görevi gruplama yapmaktır
		// classlar referans tiptir
		CustomerManager customerManager = new CustomerManager();
		customerManager.Add();
		customerManager.Remove();
		customerManager.UpDate();

		// valur (değer tipi)
		int sayı1 = 10;
		int sayı2 = 20;
		sayı2 = sayı1;
		sayı1 = 30;
		System.out.println(sayı2);

		int[] sayılar1 = new int[] { 1, 2, 6 };
		int[] sayılar2 = new int[] { 2, 4, 6 };

		sayılar1 = sayılar2;
		sayılar1[0] = 10;
		System.out.println(sayılar2[0]);
	}
}
