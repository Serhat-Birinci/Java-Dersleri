package methots2;

public class Main {

	public static void main(String[] args) {
		String mesaj = "Bugün Hava Çok Güzel";
		String yeniMesaj = sehirVer();
		System.out.println(yeniMesaj);  // operasyon metod fonksiyon hepsi aynı şey
		int sayı = topla(5,7);
		System.out.println (sayı);
	}

	public static void ekle() {
		System.out.println("Eklendi");
	}

	public static void sil() { // void metotları yap emrini yerine getiriri ama geri döndürme yapmaz
		System.out.println("Silindi"); //Variable Arguments (int...)
	}

	public static void güncelle() {
		System.out.println("Güncellendi");
	}

	public static int topla(int sayı1, int sayı2) {
		return sayı1 + sayı2;
	}

	public static String sehirVer() {
		return "Ankara";
	}
}
